<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1920"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="180"
        android:layout_gravity="center"
        android:background="#66cc99">


        <ImageView
            android:layout_width="140.952dp"
            android:layout_height="30.857dp"
            android:layout_gravity="center"
            android:background="@drawable/qjsq_qj">

        </ImageView>
        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:background="@drawable/back_qj"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="656">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="135"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="时间"
                android:textColor="#666666"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_weight="250"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_weight="520"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="135"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="原因"
                android:textSize="25dp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_weight="250"/>
            <EditText
                android:id="@+id/yuanyin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:background="@null"
                android:layout_weight="520"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="135"
            android:background="@drawable/frame1_qj">
            <TextView
                android:id="@+id/sex1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="备注"
                android:textSize="25dp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_weight="250"/>
            <EditText
                android:id="@+id/beizhu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:background="@null"
                android:layout_weight="520"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_weight="212"
            android:background="@drawable/frame2_qj"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="41.143dp"
                android:layout_height="41.143dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/huaban_qj"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:text="请上传请假条"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/qjsq_bg"
        android:layout_weight="684">
        <ImageView
            android:id="@+id/picture"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="400">
        <Button
            android:id="@+id/shenqing"
            android:layout_width="342dp"
            android:layout_height="57dp"
            android:background="@drawable/shengqi_qj"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>