<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_homepage_forth">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/teacher_setting_button"
            android:layout_marginTop="1.5dp"
            android:layout_width="31.5dp"
            android:layout_height="31.5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/settings"/>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_portrait"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:src="@drawable/test_portrait"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:civ_border_width="5dp"
        app:civ_border_color="#c6c6c6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="邵正宇"
        android:textSize="19dp"
        android:textColor="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"
        android:text="学号:1713071051"
        android:textSize="16dp"
        android:textColor="#f4f4f4"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="36dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"

            android:padding="6dp">
            <ImageView
                android:layout_marginLeft="24dp"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/curriculum_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#4f4f4f"
                android:textSize="19sp"
                android:layout_marginLeft="85dp"
                android:text="课程" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"
            android:layout_marginTop="8dp"
            android:padding="6dp">
            <ImageView
                android:layout_marginLeft="33dp"
                android:layout_width="30.5dp"
                android:layout_centerVertical="true"
                android:layout_height="29dp"
                android:src="@mipmap/attendan_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="85dp"
                android:text="我的打卡" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"
            android:layout_marginTop="8dp"
            android:padding="6dp">
            <ImageView
                android:layout_marginLeft="33.6dp"
                android:layout_width="28dp"
                android:layout_centerVertical="true"
                android:layout_height="29dp"
                android:src="@mipmap/feedback_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:layout_marginLeft="85dp"
                android:textColor="#4f4f4f"
                android:text="反馈" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="304dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"

            android:padding="6dp">
            <ImageView
                android:layout_marginLeft="33dp"
                android:layout_width="29.5dp"
                android:layout_centerVertical="true"
                android:layout_height="29.5dp"
                android:src="@mipmap/query_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:layout_marginLeft="85dp"
                android:textColor="#4f4f4f"
                android:text="疑问" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="304dp"
            android:background="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"

            android:padding="6dp">
            <ImageView
                android:layout_marginLeft="33dp"
                android:layout_width="29.5dp"
                android:layout_centerVertical="true"
                android:layout_height="29.5dp"
                android:src="@mipmap/setting_icon_v1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="19sp"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="85dp"
                android:text="设置" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>