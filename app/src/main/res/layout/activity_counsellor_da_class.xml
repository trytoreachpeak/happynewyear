<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/OverflowMenuStyle"
        app:navigationIcon="@mipmap/ic_back">
        <!--app:navigationIcon="@mipmap/ic_back"-->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="数据分析"
            style="@style/ToolbarTextSize"
            android:textColor="#fefefe"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46mm"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="2.1mm"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#66cc99">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="4.1mm"
                        android:layout_marginTop="0.7mm"
                        android:layout_marginBottom="0.2mm"
                        android:layout_marginLeft="6dp">
                        <TextView
                            android:id="@+id/locate_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:text="学生认真听课人数"
                            android:layout_marginLeft="5dp"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/second_text"
                            android:layout_toRightOf="@id/locate_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:text="最近一个星期"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:id="@+id/second_left_arrow"
                            android:layout_toLeftOf="@id/second_right_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="24dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/small_arrow_left"/>
                        <ImageView
                            android:id="@+id/second_right_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/small_arrow_right"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1mm"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="#90dab5"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1mm"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46mm"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="2.1mm"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#66cc99">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="4.1mm"
                        android:layout_marginTop="0.7mm"
                        android:layout_marginBottom="0.2mm"
                        android:layout_marginLeft="6dp">
                        <TextView
                            android:id="@+id/locate_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:text="考勤情况"
                            android:layout_marginLeft="5dp"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/third_text"
                            android:layout_toRightOf="@id/locate_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:text="最近一个星期"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:id="@+id/third_left_arrow"
                            android:layout_toLeftOf="@id/third_right_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="24dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/small_arrow_left"/>
                        <ImageView
                            android:id="@+id/third_right_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/small_arrow_right"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1mm"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="#90dab5"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/line_chart_3"
                        android:layout_width="match_parent"
                        android:layout_height="44mm"
                        android:layout_marginBottom="1mm" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46mm"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="2.1mm"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#66cc99"
                android:layout_marginBottom="2mm">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="4.1mm"
                        android:layout_marginTop="0.7mm"
                        android:layout_marginBottom="0.2mm"
                        android:layout_marginLeft="6dp">
                        <TextView
                            android:id="@+id/locate_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:text="状态次数统计"
                            android:layout_marginLeft="5dp"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/forth_text"
                            android:layout_toRightOf="@id/locate_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:text="最近一个星期"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:id="@+id/forth_left_arrow"
                            android:layout_toLeftOf="@id/forth_right_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="24dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/small_arrow_left"/>
                        <ImageView
                            android:id="@+id/forth_right_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/small_arrow_right"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1mm"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="#90dab5"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/line_chart_4"
                        android:layout_width="match_parent"
                        android:layout_height="44mm"
                        android:layout_marginBottom="1mm"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46mm"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="2.1mm"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#66cc99">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="4.1mm"
                        android:layout_marginTop="0.7mm"
                        android:layout_marginBottom="0.2mm"
                        android:layout_marginLeft="6dp">
                        <TextView
                            android:id="@+id/locate_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:text="测验情况"
                            android:layout_marginLeft="5dp"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_toRightOf="@id/locate_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:text="最近一个星期"
                            android:textSize="13dp"
                            />
                        <ImageView
                            android:layout_toLeftOf="@id/fifth_right_arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="24dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/small_arrow_left"/>
                        <ImageView
                            android:id="@+id/fifth_right_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@mipmap/small_arrow_right"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1mm"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="#90dab5"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/mPieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1mm"/>
                </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>