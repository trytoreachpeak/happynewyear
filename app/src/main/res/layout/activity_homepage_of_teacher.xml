
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!---<fragment
        android:id="@+id/abc"
        android:name="com.example.a.checkattendance.teacher.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>-->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lay_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/firstguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/firstguide_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/firstguide_dark"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/firstguide_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主页"
            android:gravity="center"
            android:textColor="#afafb0"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/thirdguide_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/thirdguide_dark"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/thirdguide_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学习"
            android:gravity="center"
            android:textColor="#afafb0"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/forthguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/forthguide_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/forthguide_dark"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/forthguide_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:gravity="center"
            android:textColor="#afafb0"
            />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>