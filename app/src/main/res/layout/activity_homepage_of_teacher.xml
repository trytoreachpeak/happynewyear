
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!---<fragment
        android:id="@+id/abc"
        android:name="com.example.a.checkattendance.teacher.FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>-->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lay_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        style="@style/LineHeight"
        android:background="#e5e5e5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="9.2mm"
        android:orientation="horizontal"
    >

        <LinearLayout
            android:id="@+id/firstguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/firstguide_img"
                android:layout_width="28.9dp"
                android:layout_height="28.9dp"
                android:layout_gravity="center"
                android:src="@mipmap/firstguide_dark" />

            <TextView
                android:id="@+id/firstguide_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1.45dp"
                android:gravity="center"
                android:text="主页"
                android:textColor="#afafb0"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/secondguide_img"
                android:layout_width="26.5dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:src="@mipmap/chat_icon_dark" />

            <TextView
                android:id="@+id/secondguide_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0.4dp"
                android:gravity="center"
                android:text="聊天"
                android:textColor="#afafb0"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/thirdguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/thirdguide_img"
                android:layout_width="30.2dp"
                android:layout_height="30.1dp"
                android:src="@mipmap/thirdguide_dark"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/thirdguide_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="学习"
                android:gravity="center"
                android:layout_marginTop="-2.2dp"
                android:textColor="#afafb0"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/forthguide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/forthguide_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/forthguide_dark"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/forthguide_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的"
                android:gravity="center"
                android:textColor="#afafb0"
                android:textSize="13sp"
                android:layout_marginTop="0.2dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>