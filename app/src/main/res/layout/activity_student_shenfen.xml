<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1920"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="180"
        android:layout_gravity="center"
        android:background="#66cc99">

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="身份认证"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#f4f4f4"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:background="@drawable/back_qj"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1080"
        android:layout_weight="130"
        android:background="@drawable/frame1_qj">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="280"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="800"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1080"
        android:layout_weight="130"
        android:background="@drawable/frame1_qj">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="工号"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="280"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="800"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1080"
        android:layout_weight="130"
        android:background="@drawable/frame1_qj">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="身份证号"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="410"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1080"
        android:layout_weight="130"
        android:background="@drawable/frame1_qj">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="800"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:textSize="25dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/take_photo"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:background="@drawable/camera"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="500"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/confirm_shenfen"
        android:layout_weight="150"/>



</LinearLayout>