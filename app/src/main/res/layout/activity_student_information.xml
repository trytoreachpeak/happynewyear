<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1920">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="180"
        android:layout_gravity="center"
        android:background="#66cc99">
        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="个人信息"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#f4f4f4"
            android:gravity="center"
            android:layout_gravity="center">

        </TextView>
        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:background="@drawable/back_qj"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1240">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="215"
            android:background="@drawable/frame1_qj">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/touxiang_in"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="130"
            android:weightSum="1080"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="姓名"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="520"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="130"
            android:weightSum="1080"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="工号"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="520"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="130"
            android:background="@drawable/frame1_qj">
            <TextView
                android:id="@+id/sex1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>
            <TextView
                android:id="@+id/sex2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_weight="520"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="130"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="生日"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>


            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_weight="520"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="130"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="学校"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="520"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="130"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="电话"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="520"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1080"
            android:layout_weight="130"
            android:background="@drawable/frame1_qj">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="邮箱"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="280"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="520"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/change"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="280"
                android:src="@drawable/change_in"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>