<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1.8mm"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/homework_button">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginLeft="1.8dp"
                android:layout_marginTop="1.8dp"
                android:layout_marginRight="1.8dp"
                android:paddingBottom="0.4mm">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0.8mm"
                android:paddingBottom="0.8mm">
                <TextView
                    android:id="@+id/homework_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:layout_marginLeft="15dp"
                    android:text="作业名"/>
                <Button
                    android:id="@+id/operate_icon"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_button_homework"
                    android:textSize="13.5sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="操作"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/homework_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:text="指定格式"/>
            <TextView
                android:id="@+id/homework_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="13sp"
                android:layout_marginTop="0.4mm"
                android:layout_marginLeft="15dp"
                android:text="截止于2019-03-27 12:30"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.8dp"
                android:background="#e5e5e5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="0.4mm"
                    android:paddingBottom="0.8mm">
                    <TextView
                        android:id="@+id/has_committed_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:textSize="16.5dp"
                        android:text="0人"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0.1mm"
                        android:text="已交"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="0.4mm"
                    android:paddingBottom="0.8mm">
                    <TextView
                        android:id="@+id/not_committed_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:textSize="16.5dp"
                        android:text="0人"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0.1mm"
                        android:text="未交"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="0.4mm"
                    android:paddingBottom="0.8mm">
                    <TextView
                        android:id="@+id/has_check_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:textSize="16.5dp"
                        android:text="0人"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="0.1mm"
                        android:text="已批"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingTop="0.4mm"
                    android:paddingBottom="0.8mm">
                    <TextView
                        android:id="@+id/no_check_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:textSize="16.5dp"
                        android:text="0人"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="0.1mm"
                        android:text="未批"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>