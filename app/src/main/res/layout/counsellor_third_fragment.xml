
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:src="@drawable/teacher_homepage_forth"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/up_setting_button"
                android:layout_marginTop="5dp"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/settings_v2"/>
            <!--drawable/settings-->
            <!--android:layout_height="29.5dp"-->
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/person_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:src="@mipmap/default_portrait_icon"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:civ_border_width="5dp"
                app:civ_border_color="#c6c6c6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="张恒"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-2dp"
                android:text="工号:138131061"
                android:textSize="14dp"
                android:textColor="#f4f4f4"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6mm"
            >
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:id="@+id/classes"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#ffffff"

                android:padding="6dp">
                <ImageView
                    android:layout_marginLeft="21dp"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/curriculum_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:layout_marginLeft="81dp"
                    style="@style/TeacherForthFragmentTextSize"
                    android:text="班级" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow_img"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:background="#e5e5e5"/>
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginTop="0.85mm"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:id="@+id/feedback_icon"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#ffffff"
                android:padding="6dp">
                <ImageView
                    android:layout_marginLeft="30.5dp"
                    android:layout_width="28dp"
                    android:layout_centerVertical="true"
                    android:layout_height="29dp"
                    android:src="@mipmap/feedback_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/TeacherForthFragmentTextSize"
                    android:layout_marginLeft="81dp"
                    android:textColor="#333333"
                    android:text="反馈" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow_img"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    style="@style/LineHeight"
                    android:layout_marginLeft="85.5dp"
                    android:background="#e5e5e5"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#ffffff"
                android:padding="6dp">
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_width="29.5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="29.5dp"
                    android:src="@mipmap/setting_icon_v1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/TeacherForthFragmentTextSize"
                    android:textColor="#333333"
                    android:layout_marginLeft="81dp"
                    android:text="设置" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow_img"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:background="#e5e5e5"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>