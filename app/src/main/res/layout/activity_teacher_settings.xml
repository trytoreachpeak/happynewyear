<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#f4f4f4">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@mipmap/ic_back">
        <!--app:navigationIcon="@mipmap/ic_back"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设置"
            style="@style/ToolbarTextSize"
            android:textColor="#fefefe"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f4f4f4">
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:layout_marginTop="0.85mm"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:id="@+id/person_info"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:text="个人信息" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/modify_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:text="修改密码" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/identity_verifi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:text="身份认证" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bind_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:text="绑定手机" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:background="#e5e5e5"/>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:layout_marginTop="0.85mm"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:id="@+id/remind_before_class"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:text="上课前提醒" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:background="#e5e5e5"/>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:layout_marginTop="0.85mm"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:id="@+id/software_version"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:text="软件版本" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:background="#e5e5e5"/>

    </LinearLayout>
</LinearLayout>