<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@mipmap/ic_back">
        <!--app:navigationIcon="@mipmap/ic_back"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            style="@style/ToolbarTextSize"
            android:textColor="#fefefe"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f4f4f4">
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:layout_marginTop="0.85mm"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="6dp">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:background="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="12dp"
                android:text="个人头像" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_portrait"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@mipmap/default_portrait_icon"
                android:layout_centerInParent="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#c6c6c6"
                android:layout_toLeftOf="@+id/locate_1"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/locate_1"
                android:layout_alignParentRight="true"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow_img"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="12dp"
                android:text="昵称" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="小刚" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="12dp"
                android:text="性别" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="男" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:background="#e5e5e5"/>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:layout_marginTop="0.85mm"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="12dp"
                android:text="大学" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="XX大学" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="学院"
                android:textColor="#4f4f4f"
                style="@style/TeacherForthFragmentTextSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="信息科学技术学院"
                android:textColor="#999999"
                style="@style/TeacherForthFragmentTextSize" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <View
                android:layout_width="match_parent"
                style="@style/LineHeight"
                android:layout_marginLeft="19.2dp"
                android:background="#e5e5e5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="12dp"
                android:text="工号" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="1013013051" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:background="#e5e5e5"/>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:layout_marginTop="0.85mm"
            android:background="#e5e5e5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#4f4f4f"
                android:layout_marginLeft="12dp"
                android:text="绑定手机" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TeacherForthFragmentTextSize"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="18816265129" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            style="@style/LineHeight"
            android:background="#e5e5e5"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bottom_shape_v2"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="19sp" />
    </LinearLayout>
</LinearLayout>